.potluck {
  background: url('<%= asset_path("cookies2.png") %>') no-repeat;
  background-size: cover;
  height: 1400px;
  padding-top: 10px;
  opacity: 0.7;
  transition: opacity 3s ease;
}

.potluck:hover {
  opacity: 1;
}

.potluckheader h1 {
  color: black;
}

.potluck div div h1 {
  color: black;
}

td {
  border-bottom: 1px solid black;
  border-right: 1px solid black;
}

.potluckrow {
  width: 100%;
}

.potluck-table .odd td {
  background-color: #5d190b;
  color: #e5e5e5;
  font-size: 130%;
}

.potluck-table .even td {
  background-color: #b45500;
  color: #e5e5e5;
  font-size: 130%;
}
